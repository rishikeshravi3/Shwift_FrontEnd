<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".expertise_activity">

    <TextView
        android:id="@+id/what_is_you"
        android:layout_width="321dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/what_is_you"
        android:textAppearance="@style/what_is_you"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <TextView
        android:id="@+id/please_sele"
        android:layout_width="314dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="12sp"
        android:text="@string/please_sele"
        android:textAppearance="@style/please_sele"
        android:translationY="-5.92sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip3"
        android:layout_width="306dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="288dp"
        android:layout_height="58dp"
        android:text=" Accounting and finance"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="193dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip4"
        android:layout_width="306dp"
        android:layout_height="57dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="524dp" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:text=" Engineering"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="524dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip5"
        android:layout_width="306dp"
        android:layout_height="57dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="448dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:text=" IT and Software"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="448dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip6"
        android:layout_width="306dp"
        android:layout_height="57dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="364dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:text="Media and Design"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="364dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip7"
        android:layout_width="306dp"
        android:layout_height="57dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="276dp" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:text="Sales and Marketing"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="276dp" />
    <Button
        android:id="@+id/button3"
        android:layout_width="349dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:text="Continue"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>