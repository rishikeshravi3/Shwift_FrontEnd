<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passwordReset_OTP_Validation">

    <TextView
        android:id="@+id/code_has_be"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="481dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="6sp"
        android:text="@string/code_has_been"
        android:translationY="-2.82sp" />

    <View
        android:id="@+id/otpdigiview1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="315dp"
        android:background="@drawable/rect4" />

    <View
        android:id="@+id/otpdigiview4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="315dp"
        android:background="@drawable/rect4" />

    <View
        android:id="@+id/otpdigiview3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="217dp"
        android:layout_marginTop="315dp"
        android:background="@drawable/rect4" />

    <View
        android:id="@+id/otpdigiview2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="315dp"
        android:background="@drawable/rect4" />

    <EditText
        android:maxLength="1"
        android:inputType="phone|number"
        android:digits="0123456789"
        android:id="@+id/otpdigitext1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/otpdigiview1"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="316dp"
        android:layout_marginBottom="-31dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-9sp"
        android:textColor="#000000"/>

    <EditText
        android:maxLength="1"
        android:inputType="phone|number"
        android:digits="0123456789"
        android:id="@+id/otpdigitext2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/otpdigiview2"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="316dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-9sp"
        android:textColor="#000000"/>

    <EditText
        android:maxLength="1"
        android:inputType="phone|number"
        android:digits="0123456789"
        android:id="@+id/otpdigitext3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="219dp"
        android:layout_marginLeft="238dp"
        android:layout_marginTop="316dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-9sp"
        android:textColor="#000000"/>

    <EditText
        android:maxLength="1"
        android:inputType="phone|number"
        android:digits="0123456789"
        android:id="@+id/otpdigitext4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_alignStart="@+id/otpdigiview4"
        android:layout_centerVertical="true"
        android:layout_marginLeft="299dp"
        android:layout_marginTop="316dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-9sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/resend_code"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="425dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="256dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="6sp"
        android:text="@string/resend_code"
        android:translationY="-2.82sp" />

    <Button
        android:id="@+id/sendOTP"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="551dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="20dp"
        android:text="@string/verifyOTP" />


</RelativeLayout>